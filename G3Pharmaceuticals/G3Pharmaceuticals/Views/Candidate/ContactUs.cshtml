@model G3Pharmaceuticals.Models.Email

@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_LayoutCandidate.cshtml";
}
<div class="contact-card">
    <div class="card-information">
        <span class="title-card">CONTACT US</span>
        <img src="~/Content/img/blue-person.png" class="img-card" alt="blue-person">
        <div class="info-card">
            <p style="color: #ffffff; font-size: 25px;"><strong>Tel:</strong> +84 33 516 7610</p>
            <p style="color: #ffffff; font-size: 25px;"><strong>Email:</strong> highwindenterprise@gmail.com</p>
            <p style="color: #ffffff; font-size: 25px;">
                <strong>Address:</strong> Floor 1 - Ha Son Tower, 277A Nguyen Van Dau St. <br />
                Ward 11, Binh Thanh District, Ho Chi Minh City
            </p>
            <a href="#"><div class="dr-btn">Get direction <i class="fa fa-arrow-right"></i></div></a>
        </div>
    </div>
</div>

<div class="form-contact-wrapper">
    @using (Html.BeginForm())
    {
        <h2>Your Name</h2>
        <input type="text" id="name" name="name" placeholder="Your Name" required>
        <h2>Phone</h2>
        <input type="tel" id="phone" name="phone" placeholder="Your Phone" required>
        <h2>Email</h2>
        <input type="text" id="Address" name="Address" placeholder="Your Email" required>
        <h2>Message</h2>
        <textarea name="message" id="message" cols="30" rows="10"></textarea>
        <input type="submit" value="Send Message">
    }
</div>