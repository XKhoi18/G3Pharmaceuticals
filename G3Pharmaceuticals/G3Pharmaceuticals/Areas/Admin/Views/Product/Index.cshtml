@model IEnumerable<G3Pharmaceuticals.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Products List</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-large" })
</p>
@using (Html.BeginForm())
{
    <p class="form-inline" style="text-align:center">
        <input type="text" name="searchString" id="searchString" class="form-control" style="width: 50%;"/>
        <input type="submit" value="Search" class="form-control" style="width: 100px";/>
    </p>
}
<table class="table">
    <tr>
        <th>
        </th>
        <th>
            @Html.ActionLink("Product ID", "Index", new { sortOrder = ViewBag.IDSortParm })
        </th>
        <th>
            @Html.ActionLink("Product Name", "Index", new { sortOrder = ViewBag.PNameSortParm })
        </th>
        <th>
            @Html.ActionLink("Date Of Manufacture", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.TypeProduct.typeName)
        </th>*@
        <th>
            @Html.ActionLink("Type", "Index", new { sortOrder = ViewBag.TypeSortParm })
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Manufacturer.ManufacturerSortParm)
        </th>*@
        <th>
            @Html.ActionLink("Manufacture", "Index", new { sortOrder = ViewBag.ManufacturerSortParm })
        </th>
        <th>
            @Html.ActionLink("Price", "Index", new { sortOrder = ViewBag.PriceSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Images)
        </th>
        <th style="width:100px;"></th>
    </tr>
    @{int count = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @count @{count = count + 1;}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @(item.DateOfManufacture.HasValue ? @item.DateOfManufacture.Value.ToString("dd-MM-yyyy") : null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeProduct.typeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer.manufacturerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Images)*@
                <img src="~/Content/images/products/@item.Images" width="100px" />
            </td>
            <td style="font-size:18px;">
                @Html.ActionLink(" ", "Edit", new { id = item.ProductID }, new { @class = "glyphicon glyphicon-edit" }) |
                @Html.ActionLink(" ", "Details", new { id = item.ProductID }, new { @class = "glyphicon glyphicon-folder-open" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.ProductID }, new { @class = "glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>


